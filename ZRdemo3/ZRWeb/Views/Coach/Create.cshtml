@model ZRdemoContracts.ModelsDTO.CoachDTO
@using ZRdemoContracts.Enum
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CoachDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.CoachId)
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                @Html.EditorFor(c => c.FirstName)<br />
                @Html.ValidationMessageFor(c => c.FirstName)
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last name</label>
                @Html.EditorFor(c => c.LastName)<br />
                @Html.ValidationMessageFor(c => c.LastName)
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">BirthDate</label>
                @Html.EditorFor(c => c.BirthDate)<br />
                @Html.ValidationMessageFor(c => c.BirthDate)
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"> Phone Number</label>
                @Html.EditorFor(c => c.PhoneNumber)<br />
                @Html.ValidationMessageFor(c => c.PhoneNumber)
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                @Html.EditorFor(c => c.Email) <br />
                @Html.ValidationMessageFor(c => c.Email)
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Gender</label>
                @Html.DropDownListFor(c => c.Gender, new SelectList(Enum.GetValues(typeof(Gender))), "Select gender")<br />
                @Html.ValidationMessageFor(c => c.Gender)
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(c => c.IsWorking) @Html.DisplayNameFor(model => model.IsWorking)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Belt" class="control-label">Belt</label>
                @Html.DropDownListFor(c => c.Belt, new SelectList(Enum.GetValues(typeof(Belts))), "Select belt")<br />
                @Html.ValidationMessageFor(c => c.Belt)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
